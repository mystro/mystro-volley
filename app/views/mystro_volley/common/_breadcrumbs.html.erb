<% if project %>
    <%= link_to project.name, root_path + "#{project.name}" %>
    <% if branch %>
        :: <%= link_to branch.name, root_path + "#{project.name}/#{branch.name}" %>
        <% if version %>
            :: <%= link_to version.name, root_path + "#{project.name}/#{branch.name}/#{version.name}" %>
        <% end %>
    <% end %>
<% end %>
